{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2017",
    "lib": ["ES2017", "dom"],
    "jsx": "react-jsx",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "@testing-library/cypress"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"],
      "@app-test/*": ["./test/*"],
      "@app-storybook/*": ["./storybook/*"],
      "@app-cypress/*": ["./cypress/*"]
    },

    /* Emit */
    "sourceMap": true,
    "outDir": "dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "useUnknownInCatchVariables": true,

    /* Completeness */
    "skipLibCheck": true,

    /* Plugins */
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["src/**/*", "test/**/*", "storybook/**/*", "cypress/**/*", "scripts/**/*"]
}
