{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    "strict": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
