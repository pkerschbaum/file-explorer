{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "@testing-library/cypress"],
    "jsx": "react-jsx",

    "strict": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@app/*": ["./src/*"],
      "@app-test/*": ["./test/*"],
      "@app-storybook/*": ["./storybook/*"],
      "@app-cypress/*": ["./cypress/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["src/**/*", "test/**/*", "storybook/**/*", "cypress/**/*", "scripts/**/*"]
}
