{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    "strict": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@app/*": ["./src/*"],
      "@app-test/*": ["./test/*"],
      "@app-storybook/*": ["./storybook/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["src/**/*", "test/**/*", "storybook/**/*", "scripts/**/*"]
}
